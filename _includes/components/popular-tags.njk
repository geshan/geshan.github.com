<!-- section popular topics -->
<section>
  <div class="mt-24 max-w-6xl mx-auto md:px-4 px-4 sm:px-4">
    <div class="grid-cols-12 grid">
      <div class="col-span-12 md:col-span-7">
        <h2 class="font-ui font-bold text-5xl text-darkpurple">
          Popular topics
        </h2>
        <div class="mt-12 flex flex-wrap">
            {%- set allowedTags = ['node.js', 'javascript', 'docker', 'talks', 'google cloud run', 'php', 'testing', 'logging', 'git'] -%}
            {%- for tag in collections.tagList | sort -%}
              {%- if tag | lower in allowedTags -%}
                {%- set tagUrl -%}/blog/categories/{{ tag | slug }}/{%- endset -%}
              <a href='{{ tagUrl }}' title="{{ tag }}" class=" background-lightbg mr-4 mb-4 rounded border-2 bg-gray-100 font-semibold text-darkgrey hover:text-avocado px-3 py-1
                  text-xl border-gray-300 cursor-pointer hover:border-gray-400 ">
                {{ tag | lower }}</a>
              {% endif %}
          {% endfor %}
          <span class=" mr-4 mb-4 font-semibold underline text-gray hover:text-darkAvocado px-3 py-1 text-xl cursor-pointer ">
            <a href="/blog/categories/">20+ more</a>
          </span>
        </div>
      </div>
    </div>
  </div>
</section>
