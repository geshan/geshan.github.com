<div>
  <div id="blog-archives" class="category">
    {% set postslist = postslist | reverse %} {% for post in postslist %} {%- if loop.index == 1 or
    postslist[ loop.index0 - 1 ].year != post.year -%}
    <h2
      class="text-xl font-medium text-darkAvocado px-2 py-1 first:mt-5 mt-8 rounded-md border-2 border-avocado w-24 text-center"
    >
      {{ post.year }}
    </h2>
    {%- endif -%}
    <article
      onclick='location.href="{{ post.url | url }}"'
      class="page-header mt-5 flex flex-col pb-2 cursor-pointer"
    >
      <h3 class="text-lg cursor-pointer w-fit border-b-2 border-avocado hover:border-gray-500">
        <a href="{{ post.url | url }}"
          >{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{%
          endif %}</a
        >
      </h3>
      <p class="text-muted text-sm cursor-pointer my-3">
        <span class="glyphicon glyphicon-calendar"></span>
        <time datetime="{{ date | getSitemapDate }}" data-updated="true">
          <time class="uppercase text-textColor" datetime="{{ post.date | getSitemapDate }}">
            {{ post.date | displayDate }} .
            <span class="text-darkgrey"
              >{{ helpers.getReadingTime(post.templateContent) }} min read</span
            >
          </time>
        </time>

        <span class="glyphicon glyphicon-tags"> </span>&nbsp;
        <span class="categories"> </span>
      </p>
    </article>

    {% endfor %}
  </div>
</div>
