<div class="w-full">
  <div id="blog-archives" class="space-y-8">
    {% set postslist = postslist | reverse %} {% for post in postslist %} {%- if loop.index == 1 or
    postslist[ loop.index0 - 1 ].year != post.year -%}
    <div class="flex items-center gap-4 {% if loop.index > 1 %}mt-12{% else %}mt-6{% endif %}">
      <h2
        class="text-2xl font-semibold text-darkAvocado font-heading flex-shrink-0"
      >
        {{ post.year }}
      </h2>
      <div class="flex-1 h-px bg-avocado"></div>
    </div>
    {%- endif -%}
    <article
      class="group border-b border-lightGray pb-6 mb-6 last:border-b-0 last:mb-0 hover:bg-lightAvocado transition-colors rounded-lg px-4 py-3 -mx-4"
    >
      <header class="page-header">
        <h3 class="text-xl  font-normal text-textColor mb-3 break-words">
          <a
            href="{{ post.url | url }}"
            class="hover:text-darkAvocado transition-colors underline-offset-4 hover:underline"
            >{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{%
            endif %}</a
          >
        </h3>
        <div class="flex flex-wrap items-center gap-3 text-sm text-darkgrey">
          <time
            class="uppercase text-textColor font-medium"
            datetime="{{ post.date | getSitemapDate }}"
          >
            {{ post.date | displayDate }}
          </time>
          <span class="text-midgrey">·</span>
          <span class="text-darkgrey">
            {{ helpers.getReadingTime(post.templateContent) }} min read
          </span>
          {% if post.data.tags %}
          <span class="text-midgrey">·</span>
          <div class="flex flex-wrap gap-2">
            {% for tag in post.data.tags | slice(0, 3) %}
            <a
              href="/blog/categories/{{ tag | slug }}/"
              class="text-darkAvocado hover:text-avocado hover:underline text-xs uppercase"
            >
              {{ tag }}
            </a>
            {% endfor %}
          </div>
          {% endif %}
        </div>
      </header>
    </article>

    {% endfor %}
  </div>
</div>
