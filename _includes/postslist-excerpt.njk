<div class="blog-index w-full mx-auto font-ui">
  {% for post in postslist | reverse %}
  <article class="post px-0 py-4 md:py-10 border-b border-neutralGray">
    <header class="page-header">
      <h3
        class="font-ui font-semibold md:text-3xl text-xl text-gray pt-3 break-words hover:underline"
      >
        <a href="{{ post.url }}"> {{ post.data.title }} </a>
      </h3>
      <p class="text-lightGray text-md md:text-xl font-medium uppercase my-3">
        <span class="glyphicon glyphicon-calendar"> </span>
        {% set date = post.date %} {% include "components/posted-date-time.njk" %} &nbsp;&middot;&nbsp;
        <span>{{ helpers.getReadingTime(post.templateContent) }} min read</span>
      </p>
    </header>
    <div class="mt-3 font-ui text-md md:text-xl text-gray">{% excerptMore post %}</div>
  </article>
  {% endfor %}
  <p class="font-body text-gray text-base mt-2 ml-6">
    More posts can be found in <a href="{{ '/blog/archives/' | url }}">the archive</a>.
  </p>
</div>
