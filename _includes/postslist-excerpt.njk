<div class="blog-index w-11/12 md:w-full mx-auto mt-4">
  {% for post in postslist | reverse %}
  <article class="post mb-6">
    <header class="page-header">
      <h2 class="font-leading font-semibold md:text-3xl text-2xl text-textColor pt-3 break-words">
        <a href="{{ post.url }}"> {{ post.data.title }} </a>
      </h2>
      <p class="text-muted text-uppercase">
        <span class="glyphicon glyphicon-calendar"> </span>
        {% set date = post.date %} {% include "components/posted-date-time.njk" %} .
        <span class="text-darkgrey"
          >{{ helpers.getReadingTime(post.templateContent) }} min read</span
        >
      </p>
    </header>
    {% include 'components/post-tags.njk' %}
    <div class="mt-6 font-reading font-normal text-midblack leading-7">{% excerptMore post %}</div>
    <footer>
      <a
        class="flex items-center font-semibold text-darkAvocado text-xl cursor-pointer mt-3"
        href="{{ post.url }}"
        >Read post <span class="ml-4 mt-1">â†’</span>
      </a>
    </footer>
  </article>
  {% endfor %}
  <p>More posts can be found in <a href="{{ '/blog/archives/' | url }}">the archive</a>.</p>
</div>
