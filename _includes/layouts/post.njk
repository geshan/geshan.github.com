---
layout: layouts/base.njk
templateClass: tmpl-post
---

{% set coverImage %}{{ cover or metadata.defaultCoverImage }}{% endset %} {% set logoUrl %}{{
"images/favicons/favicon-32x32.png" | url | absoluteUrl(metadata.url) }}{% endset %} {% set
absolutePostUrl %}{{ page.url | url | absoluteUrl(metadata.url) }}{% endset %}
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    "headline": "{{ metadata.title }}",
    "alternativeHeadline": "{{ title }}",
    "image": "{{ coverImage | url | absoluteUrl(metadata.url) }}",
    "editor": "{{ metadata.author.name }}",
    "genre": "{{ tags[1] }}",
    "keywords": "{{ renderData.keywords or keywords or metadata.keywords }}",
    "url": "{{ absolutePostUrl }}",
    "datePublished": "{{ date | htmlDateString }}",
    "dateCreated": "{{ date | htmlDateString }}",
    "dateModified": "{{ date | htmlDateString }}",
    "description": "{{ renderData.description or description or metadata.description }}",
    "articleBody": "{{ content | stripTags }}",
    "author": { "@type": "Person", "name": "{{ metadata.author.name }}" },
    "publisher": {
      "@type": "Organization",
      "name": "{{ metadata.author.name }}",
      "logo": { "@type": "ImageObject", "url": "{{ logoUrl }}" }
    },
    "mainEntityOfPage": { "@type": "WebPage", "@id": "{{ absolutePostUrl }}" }
  }
</script>
<div class="progress-bar"></div>
<div class="max-w-6xl py-3 mx-auto grid-cols-12 grid gap-15 px-4 md:px-0 mb-20">
  <div class="col-span-12">
    <article class="md:w-full mx-auto">
      <header class="page-header text-center">
        <h1 class="font-semibold font-heading text-gray text-center mb-6 tracking-[-0.01em] leading-[105%] md:leading-[105%]">
          {{ title }}
        </h1>
        <div
          class="flex items-center justify-between gap-3 md:gap-4 flex-wrap md:flex-nowrap py-2 border-y border-lightbg mt-4"
        >
          <div class="flex items-center justify-start md:gap-4 gap-2 flex-wrap w-2/3">
            <div class="flex justify-start items-center gap-3 md:gap-4">
              <!-- Avatar -->
              <img
                src="/images/favicons/favicon-32x32-pp.png"
                alt="Geshan Manandhar"
                class="w-10 h-10 rounded-full object-cover flex-shrink-0"
              />
              <!-- Author Name -->
              <span
                class="text-gray font-medium font-ui text-md md:text-xl uppercase tracking-wide text-start"
              >
                {{ metadata.author.name }}
              </span>
            </div>
            <!-- Date -->
            {% include "components/posted-date-time.njk" %}
            <!-- Reading Time -->
            <span class="text-textColor font-ui font-medium text-md md:text-xl uppercase">
              {{ helpers.getReadingTime(content) }} MIN READ
            </span>
          </div>
          <!-- Share Button -->
          <button
            type="button"
            id="share-button"
            class="flex items-center justify-center w-8 h-8 md:w-9 md:h-9 rounded text-lightGray hover:border-gray-400 hover:bg-gray-50 transition-colors flex-shrink-0"
            aria-label="Share this post"
            onclick="toggleShareIcons(); ga('send', 'event', 'share', 'clickShareOnPost');"
          >
            <img src="/images/shareIcon.svg" alt="Share this post" class="w-6 h-6">
          </button>
        </div>
        <!-- Share Icons (Hidden by default) -->
        <div id="share-icons-container" class="share-icons print:hidden hidden" aria-label="Share this post">
          <div class="flex items-center justify-center gap-3">
            {% include "components/share.njk" %}
          </div>
        </div>
      </header> 
   
      <div class="entry-content clearfix font-body text-xl text-gray">{{ content | safe }}</div>
   <div
          class="flex items-center justify-between gap-3 md:gap-4 flex-wrap md:flex-nowrap py-2 border-y border-lightbg mt-4"
        >
          <div class="flex items-center justify-start md:gap-4 gap-2 flex-wrap w-2/3">
            <div class="flex justify-start items-center gap-3 md:gap-4">
              <!-- Avatar -->
              <img
                src="/images/favicons/favicon-32x32-pp.png"
                alt="Geshan Manandhar"
                class="w-10 h-10 rounded-full object-cover flex-shrink-0"
              />
              <!-- Author Name -->
              <span
                class="text-gray font-medium font-ui text-md md:text-xl uppercase tracking-wide text-start"
              >
                {{ metadata.author.name }}
              </span>
            </div>
            <!-- Date -->
            {% include "components/posted-date-time.njk" %}
            <!-- Reading Time -->
            <span class="text-textColor font-ui font-medium text-md md:text-xl uppercase">
              {{ helpers.getReadingTime(content) }} MIN READ
            </span>
          </div>
          <!-- Share Button -->
          <button
            type="button"
            id="share-button-bottom"
            class="flex items-center justify-center w-8 h-8 md:w-9 md:h-9 rounded text-lightGray hover:border-gray-400 hover:bg-gray-50 transition-colors flex-shrink-0"
            aria-label="Share this post"
            onclick="toggleShareIconsBottom(); ga('send', 'event', 'share', 'clickShareOnPost');"
          >
            <img src="/images/shareIcon.svg" alt="Share this post" class="w-6 h-6">
          </button>
        </div>
        <!-- Share Icons (Hidden by default) -->
        <div id="share-icons-container-bottom" class="share-icons-bottom print:hidden hidden mx-auto" aria-label="Share this post">
          <div class="w-full flex items-center justify-center mx-auto gap-3">
            {% include "components/share.njk" %}
          </div>
        </div>
    </article> {% include "components/post-tags.njk" %}
    <section class="md:w-full mx-auto mt-4">{% include "components/disqus.njk" %}</section>
    
  </div>
</div>
<section class="md:w-full mx-auto mt-4 bg-lightAvocado p-4 rounded-lg pb-8">{% include "components/related-posts.njk" %}</section>
{% include "components/subscribe-nl-new.njk" %}

