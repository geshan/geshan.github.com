---
layout: layouts/base.njk
templateClass: tmpl-post
---

{% set coverImage %}{{ cover or metadata.defaultCoverImage }}{% endset %} {% set logoUrl %}{{
"images/favicons/favicon-32x32.png" | url | absoluteUrl(metadata.url) }}{% endset %} {% set
absolutePostUrl %}{{ page.url | url | absoluteUrl(metadata.url) }}{% endset %}
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    "headline": "{{ metadata.title }}",
    "alternativeHeadline": "{{ title }}",
    "image": "{{ coverImage | url | absoluteUrl(metadata.url) }}",
    "editor": "{{ metadata.author.name }}",
    "genre": "{{ tags[1] }}",
    "keywords": "{{ renderData.keywords or keywords or metadata.keywords }}",
    "url": "{{ absolutePostUrl }}",
    "datePublished": "{{ date | htmlDateString }}",
    "dateCreated": "{{ date | htmlDateString }}",
    "dateModified": "{{ date | htmlDateString }}",
    "description": "{{ renderData.description or description or metadata.description }}",
    "articleBody": "{{ content | stripTags }}",
    "author": { "@type": "Person", "name": "{{ metadata.author.name }}" },
    "publisher": {
      "@type": "Organization",
      "name": "{{ metadata.author.name }}",
      "logo": { "@type": "ImageObject", "url": "{{ logoUrl }}" }
    },
    "mainEntityOfPage": { "@type": "WebPage", "@id": "{{ absolutePostUrl }}" }
  }
</script>
<div class="progress-bar"></div>
<div class="max-w-6xl py-3 mx-auto grid-cols-12 grid gap-15 px-4 md:px-0 mb-20">
  <div class="col-span-12">
    <article class="md:w-full mx-auto mt-4">
      <header class="page-header text-center mt-8">
        <h1 class="md:text-6xl text-4xl font-bold font-heading text-gray text-center mb-6">
          {{ title }}
        </h1>
        <div
          class="flex items-center justify-between gap-3 md:gap-4 flex-wrap md:flex-nowrap py-2 border-y border-lightbg mt-4"
        >
          <div class="flex items-center justify-start md:gap-4 gap-2 flex-wrap w-2/3">
            <div class="flex justify-start items-center gap-3 md:gap-4">
              <!-- Avatar -->
              <img
                src="/images/geshan.jpg"
                alt="Geshan Manandhar"
                class="w-10 h-10 rounded-full object-cover flex-shrink-0"
              />
              <!-- Author Name -->
              <span
                class="text-gray font-medium font-body text-xl uppercase tracking-wide text-start"
              >
                {{ metadata.author.name }}
              </span>
            </div>
            <!-- Date -->
            {% include "components/posted-date-time.njk" %}
            <!-- Reading Time -->
            <span class="text-lightGray font-body font-medium text-xl uppercase">
              {{ helpers.getReadingTime(content) }} MIN READ
            </span>
          </div>
          <!-- Share Button -->
          <button
            type="button"
            class="flex items-center justify-center w-8 h-8 md:w-9 md:h-9 rounded text-lightGray hover:border-gray-400 hover:bg-gray-50 transition-colors flex-shrink-0"
            aria-label="Share this post"
          >
            <i class="fas fa-share"></i>
          </button>
        </div>
        <!-- Share Icons (Hidden by default) -->
        <div class="share-icons">
          <div class="flex items-center justify-center gap-3">
            {% include "components/share.njk" %}
          </div>
        </div>
      </header>
      {% include "components/post-tags.njk" %}
      <div class="entry-content clearfix mt-5 font-body text-xl text-gray">{{ content | safe }}</div>
      <footer class="w-full mt-12 mb-8">
        <nav class="post-navigation border-t border-gray-200 pt-8">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {% if prevPost.url %}
            <a
              href="{{ prevPost.url }}"
              class="group flex flex-col md:flex-row items-start md:items-center gap-4 p-4 rounded-lg border border-gray-200 hover:border-darkAvocado hover:bg-lightAvocado transition-all duration-200"
              title="Previous Post: {{ prevPost.data.title }}"
            >
              <div class="flex-shrink-0">
                <div
                  class="w-10 h-10 rounded-full bg-darkAvocado group-hover:bg-darkAvocado flex items-center justify-center transition-colors"
                >
                  <i class="fas fa-arrow-left text-white"></i>
                </div>
              </div>
              <div class="flex-1 min-w-0">
                <div class="text-xs font-medium text-midgrey uppercase tracking-wide mb-1">
                  Previous Post
                </div>
                <div
                  class="text-base md:text-lg font-medium font-leading text-black group-hover:text-darkAvocado break-words"
                >
                  {{ prevPost.data.title }}
                </div>
              </div>
            </a>
            {% else %}
            <div></div>
            {% endif %} {% if nextPost.url %}
            <a
              href="{{ nextPost.url }}"
              class="group flex flex-col md:flex-row items-start md:items-center gap-4 p-4 rounded-lg border border-gray-200 hover:border-darkAvocado hover:bg-lightAvocado transition-all duration-200 md:text-right"
              title="Next Post: {{ nextPost.data.title }}"
            >
              <div class="flex-1 min-w-0">
                <div
                  class="text-xs font-medium text-midgrey uppercase tracking-wide mb-1 md:text-right"
                >
                  Next Post
                </div>
                <div
                  class="text-base md:text-lg font-medium font-leading text-black group-hover:text-darkAvocado break-words"
                >
                  {{ nextPost.data.title }}
                </div>
              </div>
              <div class="flex-shrink-0">
                <div
                  class="w-10 h-10 rounded-full bg-darkAvocado group-hover:bg-darkAvocado flex items-center justify-center transition-colors ml-auto md:ml-0"
                >
                  <i class="fas fa-arrow-right text-white"></i>
                </div>
              </div>
            </a>
            {% endif %}
          </div>
        </nav>
      </footer>
    </article>
    <section class="md:w-full mx-auto mt-4">{% include "components/disqus.njk" %}</section>
  </div>
</div>
