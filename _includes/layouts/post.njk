---
layout: layouts/base.njk
templateClass: tmpl-post
---

{% set coverImage %}{{ cover or metadata.defaultCoverImage }}{% endset %} {% set logoUrl %}{{
"images/favicons/favicon-32x32.png" | url | absoluteUrl(metadata.url) }}{% endset %} {% set
absolutePostUrl %}{{ page.url | url | absoluteUrl(metadata.url) }}{% endset %}
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    "headline": "{{ metadata.title }}",
    "alternativeHeadline": "{{ title }}",
    "image": "{{ coverImage | url | absoluteUrl(metadata.url) }}",
    "editor": "{{ metadata.author.name }}",
    "genre": "{{ tags[1] }}",
    "keywords": "{{ renderData.keywords or keywords or metadata.keywords }}",
    "url": "{{ absolutePostUrl }}",
    "datePublished": "{{ date | htmlDateString }}",
    "dateCreated": "{{ date | htmlDateString }}",
    "dateModified": "{{ date | htmlDateString }}",
    "description": "{{ renderData.description or description or metadata.description }}",
    "articleBody": "{{ content | stripTags }}",
    "author": { "@type": "Person", "name": "{{ metadata.author.name }}" },
    "publisher": {
      "@type": "Organization",
      "name": "{{ metadata.author.name }}",
      "logo": { "@type": "ImageObject", "url": "{{ logoUrl }}" }
    },
    "mainEntityOfPage": { "@type": "WebPage", "@id": "{{ absolutePostUrl }}" }
  }
</script>
<div class="progress-bar"></div>
<div class="max-w-6xl py-3 mx-auto grid-cols-12 grid gap-15 px-4 md:px-0">
  <div class="col-span-12">
    <article class="hentry md:w-full mx-auto mt-4">
      <header class="page-header text-center mt-8">
        <h1 class="md:text-6xl text-4xl font-bold text-textColor text-center mb-6">{{ title }}</h1>
        <div
          class="flex items-center justify-between gap-3 md:gap-4 flex-wrap md:flex-nowrap py-4 border-y border-lightbg my-8"
        >
          <div class="flex items-center justify-start md:gap-4 gap-2 flex-wrap w-2/3">
            <div class="flex justify-start items-center gap-3 md:gap-4">
              <!-- Avatar -->
              <img
                src="/images/geshan.jpg"
                alt="Geshan Manandhar"
                class="w-10 h-10 rounded-full object-cover flex-shrink-0"
              />
              <!-- Author Name -->
              <span
                class="text-black font-bold font-leading text-xs sm:text-sm md:text-base uppercase tracking-wide"
              >
                {{ metadata.author.name }}
              </span>
            </div>
            <!-- Date -->
            {% include "components/posted-date-time.njk" %}
            <!-- Reading Time -->
            <span class="text-midgrey font-reading text-xs sm:text-sm md:text-base uppercase">
              {{ helpers.getReadingTime(content) }} MIN READ
            </span>
          </div>
          <!-- Share Button -->
          <button
            type="button"
            class="flex items-center justify-center w-8 h-8 md:w-9 md:h-9 rounded hover:border-gray-400 hover:bg-gray-50 transition-colors flex-shrink-0"
            aria-label="Share this post"
            onclick="document.querySelector('.share-icons').classList.toggle('hidden')"
          >
            <i class="fas fa-share"></i>
          </button>
        </div>
        <!-- Share Icons (Hidden by default) -->
        <div class="share-icons hidden mt-4">
          <div class="flex items-center justify-center gap-3">
            {% include "components/share.njk" %}
          </div>
        </div>
      </header>
      {% include "components/post-tags.njk" %}
      <div class="entry-content clearfix mt-5">{{ content | safe }}</div>
      <footer class="w-full mt-4">
        <ul class="meta text-muted pager my-6 flex md:flex-row flex-col justify-evenly">
          {% if prevPost.url %}
          <li
            class="previous bg-darkAvocado hover:text-darkAvocado hover:bg-white hover:border-darkAvocado border-2 border-transparent transition ease-in delay-100 px-3 py-2 w-full rounded-md text-white text-justify"
          >
            <a
              href="{{ prevPost.url }}"
              class="block text-left w-full text-md md:text-lg"
              title="Previous Post: {{ prevPost.data.title }}"
              >« {{ prevPost.data.title }}</a
            >
          </li>
          {% endif %} {% if nextPost.url %}
          <li
            class="next bg-darkAvocado hover:text-darkAvocado hover:bg-white hover:border-darkAvocado border-2 border-transparent transition ease-in delay-100 px-3 py-2 w-full mt-4 md:mt-0 rounded-md text-white text-justify"
          >
            <a
              href="{{ nextPost.url }}"
              class="block text-right w-full text-md md:text-lg"
              title="Next Post: {{ nextPost.data.title }}"
              >{{ nextPost.data.title }} »</a
            >
          </li>
          {% endif %}
        </ul>
      </footer>
    </article>
    <section class="md:w-full mx-auto mt-4">{% include "components/disqus.njk" %}</section>
  </div>
</div>
