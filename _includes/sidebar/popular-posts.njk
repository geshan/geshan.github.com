{% set posts = popular | head(5) %}
<section class="panel panel-default w-11/12 mb-6">
  <div class="panel-heading mb-2">
    <h3 class="panel-title">Popular Posts</h3>
  </div>
  <div class="list-group flex flex-col justify-center content-center ">
    {% for post in posts %}      
      <a class="list-group-item{% if post.url == page.url %} active{% endif %} mb-5 border-b-2 border-darkgrey hover:border-purple font-reading font-normal text-purple w-full text-base " href="{{ post.url | url }}" title="{{ post.title }}">
          {{ post.title }}
      </a>             
    {%- endfor -%}      
  </div>
</section>
