{% set posts = collections.posts | head(-5) %}
<section>
  <div class="mt-20 max-w-6xl mx-auto pb-8 px-4">
    <div class="grid-cols-12 md:grid gap-10">
      <div class="col-span-12 md:col-span-8">
        <h2
          class="font-leading font-semibold text-4xl md:text-6xl text-textColor md:pb-12 pb-6 break-words"
        >
          <span class="text-lightGray italic font-normal"> Recently</span> Published
        </h2>
        <!-- recent posting  -->
        <div class="mb-14">
          <div id="recent_posts" class="list-group">
            {% for post in posts | reverse %}
            <div class="border-b border-mildgrey py-8 hover:bg-lightAvocado">
              <h3 class="font-leading font-semibold text-2xl text-gray pt-3">
                <a
                  class="list-group-item{% if post.url == page.url %} active{% endif %} break-words"
                  href="{{ post.url | url }}"
                  title="{{ post.data.description }}"
                >
                  {% if post.data.title %} {{ post.data.title }} {% else %}
                  <code> {{ post.url }} </code>
                  {% endif %}
                </a>
              </h3>
              <p class="w-full text-sm sm:text-base text-darkgrey my-3 leading-relaxed">
                <time
                  class="uppercase text-textColor text-xs sm:text-sm md:text-base whitespace-normal break-words"
                  datetime="{{ post.date | getSitemapDate }}"
                >
                  {{ post.data.date | displayDateOnly }} &nbsp;&middot;&nbsp; {{
                  helpers.getReadingTime(post.templateContent) }} min read
                </time>
              </p>
              <p
                class="font-reading font-normal text-textColor text-sm sm:text-base leading-relaxed break-words"
              >
                {{ post.data.description }}
              </p>
            </div>
            {% endfor %}
          </div>
        </div>
        <div>
          <a
            class="rounded border-2 w-full text-center font-semibold uppercase text-darkgrey hover:text-darkAvocado hover:border-darkAvocado py-3 text-base border-gray-300 cursor-pointer px-4"
            href="/posts/1/"
          >
            view all posts
          </a>
        </div>
      </div>
      <div class="col-span-12 md:col-span-4 mt-10 md:mt-0 md:ml-20 w-10/12 sm:mr-auto">
        <!-- advertisment -->
        {% include "sidebar/carbon.njk" %} {% include "sidebar/popular-picks-posts.njk" %}
      </div>
    </div>
  </div>
</section>
