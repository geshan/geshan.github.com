<section class="panel panel-default mb-6">
  <div class="panel-heading mb-2">
    <h3 class="panel-title !text-3xl font-normal uppercase mb-8 md:mb-4">Popular Picks</h3>
  </div>
  <div class="list-group flex flex-col justify-center content-center">
    {% set popularPosts = collections.popularPicks | head(5) %} {% for post in popularPosts %}
    <div class="border-b-2 border-lightGray py-2">
      <a
        class="list-group-item mb-5 hover:border-avocado font-reading font-normal text-midblack w-full text-base pb-3"
        href="{{ post.url | url }}"
        title="{{ post.data.title }}"
      >
        {{ post.data.title }}
      </a>
      <p class="text-textColor text-sm py-2">
        {{ post.data.date | displayDateOnly }} &nbsp;&middot;&nbsp; {{
        helpers.getReadingTime(post.templateContent) }} min read
      </p>
    </div>
    {% endfor %} {% if popularPosts.length == 0 %}
    <p class="text-textColor text-sm">No popular picks available yet.</p>
    {% endif %}
  </div>
</section>
