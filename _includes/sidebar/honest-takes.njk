<!-- Honest Takes Section -->
<section class="pt-16 px-4 md:px-8 bg-gradient-to-t from-white via-lightAvocado to-avocado">
  <div class="max-w-6xl mx-auto">
    <h2 class="font-heading font-medium pb-12">
      <span class="text-lightGray italic"> Honest</span>
      <span class="text-blackText">Takes</span>
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 items-start gap-6">
      {% for testimonial in honestTakes %}
      <div
        class="{% if testimonial.isLarge %}md:col-span-2{% endif %} bg-white rounded-2xl shadow-md {% if testimonial.isLarge %} {% else %} {% endif %} font-body relative overflow-hidden py-4"
      >
        <p
          class="{% if testimonial.isLarge %}text-xl text-xl{% else %}text-xl{% endif %} text-black font-regular mb-6 px-8 md:px-12 md:py-8"
        >
          {{ testimonial.quote }}
        </p>
        <div class="relative z-10">
          <i
            class="fas fa-quote-left text-quoteGray absolute -bottom-1 left-6 md:text-5xl text-3xl font-serif leading-none"
          ></i>
        </div>
        <div
          class="flex items-center justify-between border-t border-neutralGray pt-4 p-6 md:p-12 py-3 md:py-4 text-textColor text-lg z-50 overflow-hidden"
        >
          <div class="text-xl">
            <p class="font-semibold text-gray">{{ testimonial.author }}</p>
            <p class="text-lightGray font-regular">{{ testimonial.title }}</p>
          </div>
          <div>
            <p class="text-lightGray font-bold uppercase text-xl">{{ testimonial.company }}</p>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
