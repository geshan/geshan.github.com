---
permalink: /blog/categories/
layout: layouts/home.njk
renderData:
  title: Categories
  description: "Categories and tags on this blog"
---

<article role="article" class="md:max-w-6xl mx-auto mt-4">
  <header class="page-header">
    <h1 class="md:text-4xl text-3xl font-bold text-gray">Categories</h1>
  </header>
  <div class="grid md:grid-rows-10 grid-cols-2 md:grid-flow-col gap-4 mt-10">
    {% for tag in collections.tagList | sort %} {% set tagUrl %}/blog/categories/{{ tag | slug }}/{%
    endset %}
    <a
      href="{{ tagUrl | url }}"
      class="tag mt-6 font-reading font-normal text-textColor w-9/12 border-b-2 border-gray-400 hover:border-avocado"
      >{{ tag }}</a
    >
    {% endfor %}
  </div>
</article>
